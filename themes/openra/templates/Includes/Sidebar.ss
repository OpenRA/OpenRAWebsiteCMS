<% uncached %>
<div id="Sidebar">
	<div id="Screenshot"><img width="300px" src="$Screenshot"/></div>
	<a href="download/$Platform.Main.Name/"><img width="306" height="68" src="$ThemeDir/images/{$Platform.Main.Name}_download.png" /></a>
	<p class="download">
		<a href="download/$Platform.Other1.Name/">Download OpenRA for $Platform.Other1.Desc</a>
	</p>
	<p class="download">
		<a href="download/$Platform.Other2.Name/">Download OpenRA for $Platform.Other2.Desc</a>
	</p>
	<div style="margin: 5px auto; width: 100%">
		<span class="stats">
			<strong id="stats_games">$GamesPlayed</strong><span class="desc">public games played</span>
		</span>
		<span class="stats">
			<strong id="stats_down">$DownloadSum</strong><span class="desc">downloads</span>
		</span>
	</div>
	<p>
		<a href="license/"><img src="$ThemeDir/images/gplv3-127x51.png" alt="GPLv3 Logo" style="border: none; margin-top: 5px;"/></a>
	</p>
</div>
<% end_uncached %>
